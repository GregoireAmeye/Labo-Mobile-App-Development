<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:debuggable="true"
    tools:context=".DemoActivity$PlaceholderFragment">

    <TextView android:text="@string/favoriete_docent" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewVraag" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextDocent"
        android:layout_below="@+id/editTextDocent"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/editTextDocent" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ok_button"
        android:id="@+id/buttonOK"
        android:layout_marginTop="40dp"
        android:layout_below="@id/editTextDocent"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome"
        android:id="@+id/textViewWelcome"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/textViewVraag" />


</RelativeLayout>
